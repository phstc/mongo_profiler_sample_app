<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Location / Country</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.first_name, customers_path(first_name: customer.first_name) %></td>
        <td><%= link_to customer.last_name, customers_path(last_name: customer.last_name) %></td>
        <td><%= link_to customer.email, customers_path(email: customer.email) %></td>
        <td><%= link_to customer.location.country, locations_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>
